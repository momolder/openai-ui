{
  "name": "open-ai-svelte",
  "version": "0.0.7",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "predeploy:zip": "(npm run build) && copy .\\package.json .\\build\\package.json && copy .\\package-lock.json .\\build\\package-lock.json && cd ./build && npm ci --omit dev && cd..",
    "deploy:zip": "(pwsh -command \"Compress-Archive -Path ./build/* -DestinationPath release.zip -force\") && az webapp deployment source config-zip --resource-group rg-openai-ui --name openai-ui --src release.zip",
    "docker:build": "docker build --pull --rm -f \"Dockerfile\" -t openaiui:latest \".\" --progress=plain",
    "predocker:run": "npm run docker:build",
    "docker:run": "docker run --rm -d -p 80:80/tcp openaiui:latest --openai",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "login": "az login && az account set --subscription",
    "test": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@sveltejs/adapter-node": "^1.3.1",
    "@sveltejs/kit": "^1.27.6",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@zerodevx/svelte-toast": "^0.9.5",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-svelte": "^2.35.1",
    "playwright": "^1.40.0",
    "postcss": "^8.4.31",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.1",
    "shiki": "^0.14.5",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.2",
    "svelte-markdown": "^0.4.0",
    "tailwindcss": "^3.3.5",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2",
    "vite": "^4.5.0"
  },
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "@azure/openai": "^1.0.0-beta.9",
    "@azure/storage-blob": "^12.17.0"
  },
  "type": "module"
}
